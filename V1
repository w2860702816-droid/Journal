<script>
    // æœç´¢åŠŸèƒ½
    const searchBox = document.getElementById('searchBox');
    const mediaLinks = document.querySelectorAll('.media-link');

    searchBox.addEventListener('input', function(e) {
        const searchTerm = e.target.value.toLowerCase();
        
        mediaLinks.forEach(link => {
            const mediaName = link.querySelector('.media-name').textContent.toLowerCase();
            const mediaSection = link.querySelector('.media-section').textContent.toLowerCase();
            
            if (mediaName.includes(searchTerm) || mediaSection.includes(searchTerm)) {
                link.style.display = 'block';
            } else {
                link.style.display = 'none';
            }
        });

        // éšè—ç©ºçš„åˆ†ç±»
        const categories = document.querySelectorAll('.category');
        categories.forEach(category => {
            const visibleLinks = category.querySelectorAll('.media-link[style="display: block"], .media-link:not([style*="display: none"])');
            if (visibleLinks.length === 0) {
                category.style.display = 'none';
            } else {
                category.style.display = 'block';
            }
        });
    });

    // æ·»åŠ ç‚¹å‡»ç»Ÿè®¡
    mediaLinks.forEach(link => {
        link.addEventListener('click', function() {
            console.log('Clicked:', this.querySelector('.media-name').textContent);
        });
    });

    // æ·»åŠ è½½å…¥åŠ¨ç”»
    window.addEventListener('load', function() {
        const categories = document.querySelectorAll('.category');
        categories.forEach((category, index) => {
            setTimeout(() => {
                category.style.opacity = '0';
                category.style.transform = 'translateY(20px)';
                category.style.transition = 'all 0.5s ease';
                
                setTimeout(() => {
                    category.style.opacity = '1';
                    category.style.transform = 'translateY(0)';
                }, 100);
            }, index * 100);
        });
    });

    // Service Worker for PWA (optional)
    if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
            navigator.serviceWorker.register('/sw.js').then(function(registration) {
                console.log('ServiceWorker registration successful');
            }, function(err) {
                console.log('ServiceWorker registration failed: ', err);
            });
        });
    }
</script>
